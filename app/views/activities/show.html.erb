
<% if @activity.thumbnail.attached?  %>
  <div style="width:100%; height: 300px; overflow-y:hidden">
    <%= image_tag(@activity.thumbnail, style:'width:100%') %>
  </div>
<% end %>

<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width: 100%">
      <h1 class="display-4">
        <%= link_to @activity.title, activities_path %>
      </h1>
      <p class="lead">
        <%= @activity.updated_at.strftime("%b %e %a") %> by <%= @activity.owner %> | <%= pluralize(@activity.tickets_left, 
        "Ticket") %> left!
      </p>
      <hr class="my-4">
      <div class="activity_body">
        <%= @activity.description %>
      </div>      

</div>

<% if @activity.tickets_left > 0 %>
<div class="container">
  <%= button_to "Book now!", new_order_path, method: :get, params: { activity_id: @activity.id } %> 
</div>
<% end %>

